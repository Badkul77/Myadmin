<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="match_parent" android:layout_height="wrap_content" xmlns:android="">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:text="You Help History"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/text"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/joinbtn"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:id="@+id/lin_firstId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_proj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID    :  " />

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:layout_toRightOf="@+id/tv_proj"
                        android:text="BridgeWaterloo"
                        android:textColor="#000000" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#D7D7D7"></View>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_compId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DETAILS   :  " />

                    <TextView
                        android:id="@+id/details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_toRightOf="@+id/tv_compId"
                        android:text=" MORNING SHIFT"
                        android:textColor="#000000" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#D7D7D7"></View>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/xyz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="ISSUE   :  " />

                    <TextView
                        android:id="@+id/issue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_toRightOf="@+id/xyz"
                        android:text=" YYYYYYY"
                        android:textColor="#000000" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#D7D7D7"></View>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_projId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STAUS   :  " />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:layout_toRightOf="@+id/tv_projId"
                        android:text="BridgeWaterloo"
                        android:textColor="#000000" />
                </RelativeLayout>







            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView >

</RelativeLayout>